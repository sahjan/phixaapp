<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.example.project.photoapplication.OverlayActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <include layout="@layout/gl_view"/>

            <ImageView
                android:id="@+id/hueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />



            <LinearLayout
                android:id="@+id/overlayMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:weightSum="4">

                <HorizontalScrollView
                    android:id="@+id/filtersScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/black"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/filtersList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/alienButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/crossprocessButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/documentaryButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/grayscaleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/intenseColoursButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/lomoishButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/negativeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/oldFilmButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/posterizeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/sepiaButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                        <ImageButton
                            android:id="@+id/vignetteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                    </LinearLayout>

                </HorizontalScrollView>

                <ImageButton
                    android:id="@+id/textImgButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/custom_button"
                    android:outlineProvider="none"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/text_selector" />

                <ImageButton
                    android:id="@+id/clipartImgButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/custom_button"
                    android:outlineProvider="none"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/clipart_selector" />

                <ImageButton
                    android:id="@+id/imageImgButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/custom_button"
                    android:outlineProvider="none"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/image" />

                <ImageButton
                    android:id="@+id/filtersImgButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/custom_button"
                    android:cropToPadding="false"
                    android:outlineProvider="none"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/filters_selector" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/slidersBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <SeekBar
                    android:id="@+id/adjustSlider"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.02"
                    android:background="@android:color/transparent"
                    android:max="100"
                    android:min="0"
                    android:progress="50"
                    android:visibility="invisible" />

                <SeekBar
                    android:id="@+id/hueSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:min="0"
                    android:progress="90"
                    android:visibility="invisible" />

            </LinearLayout>

            <include layout="@layout/top_bar"/>

        </FrameLayout>

    </LinearLayout>