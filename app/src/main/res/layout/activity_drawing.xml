<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.project.photoapplication.Drawing"
    android:background="#000000">



    <com.example.project.photoapplication.DrawableView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <HorizontalScrollView
        android:id="@+id/mainBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/but1"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Size" />

            <Button
                android:id="@+id/but2"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:text="Color" />

            <Button
                android:id="@+id/but3"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Blur" />
            <Button
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Accept Colour"
                android:visibility="invisible"/>

        </LinearLayout>
    </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/slidersBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="40dp">

        <SeekBar
            android:id="@+id/adjustSlider"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.02"
            android:background="@android:color/transparent"
            android:max="100"
            android:min="0"
            android:visibility="invisible"
            android:progress="4">

        </SeekBar>
        </LinearLayout>

    </FrameLayout>
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/layers"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:background="@drawable/layers_1"/>
            <Button
                android:id="@+id/currentColour"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:paddingLeft="100dp"
                android:layout_marginLeft="100dp"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/moreOpt"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.04"
                    android:background="@drawable/more_options_1" />
            </LinearLayout>

        </LinearLayout>


</RelativeLayout>
