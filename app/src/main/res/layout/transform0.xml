<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <android.opengl.GLSurfaceView
                android:id="@+id/effectsview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <HorizontalScrollView
                android:id="@+id/transformBar"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/but01"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="Crop" />

                    <Button
                        android:id="@+id/but02"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="Rotate" />

                    <Button
                        android:id="@+id/but03"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="Distort" />

                    <Button
                        android:id="@+id/but04"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="More" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/topBut"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="start"
                    android:background="@drawable/layers_1"
                    app:srcCompat="@drawable/layers_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/moreOpt"
                        android:layout_width="45dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_weight="0.04"
                        android:background="@drawable/more_options_1"
                        android:paddingRight="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/slidersBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <SeekBar
                    android:id="@+id/adjustSlider"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.02"
                    android:background="@android:color/transparent"
                    android:max="5"
                    android:min="0"
                    android:visibility="invisible" />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>