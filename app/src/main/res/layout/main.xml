<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/topBut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/layers_1"
            app:srcCompat="@drawable/layers_1" />

        <ImageButton
            android:id="@+id/topBut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/file_open_1"
            app:srcCompat="@drawable/file_open_1" />

        <ImageButton
            android:id="@+id/topBut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/file_save_1"
            app:srcCompat="@drawable/file_save_1" />

        <ImageButton
            android:id="@+id/moreOpt"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/more_options_1"
            app:srcCompat="@drawable/more_options_1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_weight="0.33">

        <android.opengl.GLSurfaceView
            android:id="@+id/effectsview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </FrameLayout>

    <SeekBar
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.06"
        android:background="@android:color/transparent"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:visibility="gone" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but1"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Trans" />

            <Button
                android:id="@+id/but2"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:text="Adjust" />

            <Button
                android:id="@+id/but3"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Brush" />

            <Button
                android:id="@+id/but4"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Overl" />

            <Button
                android:id="@+id/but5"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="More" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>