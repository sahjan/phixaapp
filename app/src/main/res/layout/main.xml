<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/gl_view"/>

            <ImageView
                android:id="@+id/hueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <HorizontalScrollView
                android:id="@+id/mainBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/transformButton"
                        android:layout_width="76dp"
                        android:layout_height="40dp"
                        android:text="Transform" />

                    <Button
                        android:id="@+id/adjustButton"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:text="Adjust" />

                    <Button
                        android:id="@+id/brushButton"
                        android:layout_width="76dp"
                        android:layout_height="40dp"
                        android:text="Brush" />

                    <Button
                        android:id="@+id/overlayButton"
                        android:layout_width="76dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Overlay" />

                    <Button
                        android:id="@+id/moreButton"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="More" />
                </LinearLayout>
            </HorizontalScrollView>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/layers"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:background="@drawable/layers_1"
                app:srcCompat="@drawable/layers_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/moreOpt"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.04"
                    android:background="@drawable/more_options_1" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>