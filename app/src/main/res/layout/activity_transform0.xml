<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.project.photoapplication.Transform0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <include layout="@layout/gl_view" />

        <com.steelkiwi.cropiwa.CropIwaView
            android:id="@+id/crop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ci_translation_enabled="false"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/cropButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/confirmCrop"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_weight="0.06"
                app:srcCompat="@android:drawable/ic_menu_crop" />

            <ImageButton
                android:id="@+id/cancelCrop"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_weight="0.06"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/hueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <HorizontalScrollView
            android:id="@+id/transformBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/but01"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Crop" />

                <Button
                    android:id="@+id/but02"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Rotate" />

                <Button
                    android:id="@+id/but03"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Distort" />

                <Button
                    android:id="@+id/but04"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="More" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/slidersBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <SeekBar
                android:id="@+id/adjustSlider"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.02"
                android:background="@android:color/transparent"
                android:max="100"
                android:min="0"
                android:progress="50"
                android:visibility="invisible" />

        </LinearLayout>

        <include layout="@layout/top_bar" />

    </FrameLayout>

</LinearLayout>
