<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.project.photoapplication.Brush2">

    <ImageView
        android:id="@+id/hueView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <include layout="@layout/gl_view"/>

    <LinearLayout
        android:id="@+id/brushTools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:paddingTop="80dp">

        <ImageButton
            android:id="@+id/brush1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/brush" />

        <ImageButton
            android:id="@+id/brush2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/brush2" />

        <ImageButton
            android:id="@+id/pencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/pencil" />

        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/eraser" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/brushBarDraw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <Button
                android:id="@+id/but21"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Draw" />

            <Button
                android:id="@+id/but22"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:text="Dodge" />

            <Button
                android:id="@+id/but23"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Burn" />

            <Button
                android:id="@+id/but24"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Heal" />

            <Button
                android:id="@+id/but26"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Sharp" />

            <Button
                android:id="@+id/but27"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Blur" />

            <Button
                android:id="@+id/but28"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Warp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/slidersBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <SeekBar
            android:id="@+id/softnessSlider"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.03"
            android:background="@android:color/transparent"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="invisible" />

        <SeekBar
            android:id="@+id/opacitySlider"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.02"
            android:background="@android:color/transparent"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="invisible" />

    </LinearLayout>

    <include layout="@layout/top_bar"/>

</FrameLayout>


</LinearLayout>