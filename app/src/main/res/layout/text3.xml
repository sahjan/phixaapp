<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.opengl.GLSurfaceView
            android:id="@+id/effectsview"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_gravity="right"
            android:layout_weight="0.33" />

        <LinearLayout
            android:id="@+id/slidersBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <SeekBar
                android:id="@+id/fontSlider"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.03"
                android:background="@android:color/transparent"
                android:max="5"
                android:min="0"
                android:visibility="invisible" />

            <SeekBar
                android:id="@+id/fontSizeSlider"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.02"
                android:background="@android:color/transparent"
                android:max="5"
                android:min="0"
                android:visibility="invisible" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/overlayBarText"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/but31t"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Text"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/but32t"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="ClipArt" />

                <Button
                    android:id="@+id/but33t"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Image" />

                <Button
                    android:id="@+id/but34t"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Filters" />

            </LinearLayout>
        </HorizontalScrollView>

        <include layout="@layout/top_bar"/>

        <GridLayout
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:paddingTop="70dp">

            <Button
                android:id="@+id/colourBut"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Colour Pallete" />

            <RadioButton
                android:id="@+id/yellowRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Y"
                android:textColor="#f2d815"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/blueRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="B"
                android:textColor="#2b8cc4"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/greenRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:checked="false"
                android:text="G"
                android:textColor="#5eba30"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/redRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="R"
                android:textColor="#b51313"
                android:textStyle="bold" />

        </GridLayout>

    </FrameLayout>


</LinearLayout>