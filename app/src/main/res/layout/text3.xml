<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/topBut"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/layers_1"
            app:srcCompat="@drawable/layers_1" />


        <ImageButton
            android:id="@+id/moreOpt"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/more_options_1"
            app:srcCompat="@drawable/more_options_1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_weight="0.33">

        <android.opengl.GLSurfaceView
            android:id="@+id/effectsview"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1" />

        <GridLayout
            android:layout_width="97dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/colourBut"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Colour Pallete" />

            <RadioButton
                android:id="@+id/yellowRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Y"
                android:textColor="#f2d815"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/blueRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="B"
                android:textColor="#2b8cc4"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/greenRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:checked="false"
                android:text="G"
                android:textColor="#5eba30"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/redRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="R"
                android:textColor="#b51313"
                android:textStyle="bold" />

        </GridLayout>

    </FrameLayout>

    <SeekBar
        android:id="@+id/fontBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.06"
        android:background="@android:color/transparent"
        android:max="5"
        android:min="0"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/sizeBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.06"
        android:background="@android:color/transparent"
        android:max="5"
        android:min="0"
        android:visibility="invisible" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but31"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Text"
                android:textColor="#000000" />

            <Button
                android:id="@+id/but32"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="ClipArt" />

            <Button
                android:id="@+id/but33"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Image" />

            <Button
                android:id="@+id/but34"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Filters" />

        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>